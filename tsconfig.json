{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "esnext.array", "esnext.asynciterable", "esnext.symbol"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "target": "ESNEXT",
    "baseUrl": ".",
    "paths": {
        "~/*": ["src/*"],
        "~/components": ["components-jsx/index.ts"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "outDir": "whofuckingcaresdude"
  },
  "include": ["src/**/*", "components-jsx/**/*", "eslint.config.mjs"]
}
