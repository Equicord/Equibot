{
    "name": "venbot",
    "version": "1.0.0",
    "description": "Discord Bot for the Equicord server",
    "main": "dist/index.js",
    "scripts": {
        "start": "pnpm sql:up & pnpm build && node --enable-source-maps . EQUIBOT",
        "build": "node scripts/build.mjs",
        "test": "pnpm lint && pnpm testTypes",
        "testTypes": "tsc --noEmit",
        "genTypes": "pnpm sql:types && node scripts/genTypes.mjs",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "pnpm lint --fix",
        "sql:shell": "sqlite3 data/db.sqlite3",
        "sql:up": "sqlite3 data/db.sqlite3 < sql/create.sql",
        "sql:down": "sqlite3 data/db.sqlite3 < sql/drop.sql",
        "sql:types": "kysely-codegen --url data/db.sqlite3",
        "postinstall": "pnpm sql:up && pnpm genTypes"
    },
    "keywords": [],
    "author": "Vendicated <vendicated+npm@riseup.net>",
    "dependencies": {
        "@napi-rs/canvas": "^0.1.80",
        "better-sqlite3": "^12.4.1",
        "fastify": "^5.6.1",
        "gifenc": "^1.0.3",
        "gifuct-js": "^2.1.2",
        "kysely": "^0.28.7",
        "leven": "^4.1.0",
        "markdown-table": "^3.0.4",
        "oceanic.js": "1.12.0",
        "pako": "^2.1.0",
        "parse-duration": "^2.1.4",
        "valibot": "^1.1.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^5.4.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^24.5.2",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/parser": "^8.44.1",
        "esbuild": "^0.25.10",
        "eslint": "^9.36.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.2.0",
        "kysely-codegen": "^0.19.0",
        "pino-pretty": "^13.1.1",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.1"
    },
    "engines": {
        "node": ">=20"
    }
}